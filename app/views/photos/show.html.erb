<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd>
    <img src="<%=@the_photo.image %>" class="img-responsive">
  </dd>

  <dt>Caption</dt>
  <dd>
    <%= @the_photo.caption%>
  </dd>

  <dt>Owner</dt>
  <dd>
    <%= @the_photo.poster.username%>
  </dd>

  <dt>Posted</dt>
  <dd>
    <%= time_ago_in_words(@the_photo.created_at) %> ago
  </dd>

  <dt>Likes count</dt>
  <dd><%= @the_photo.likes_count%></dd>

  <dt>Comments count</dt>
  <dd><%= @the_photo.comments_count%></dd>

  <dt>Fans</dt>
  <dd>
   <%= @the_photo.fan_list%>
  </dd>

  <dt>Add a fan</dt>
  <dd>

    <form action="/insert_like" method="post">
      <input type="hidden" value="<%= @the_photo.id%>" name="query_photo_id">
      <button>Like</button>
    </form>
  </dd>

</dl>

<h2>Comments</h2>

<table>
  <tbody>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>
  <% @the_photo.comments.each do |comment| %>
    <tr>
      <td>
        <%= comment.commenter.username %>
      </td>

      <td>
        <%= comment.body %>
      </td>  

      <td>
        <%= time_ago_in_words(comment.created_at) %> ago
      </td>  
    </tr>  
  <% end %>

</tbody></table>

<h3>Add a new comment</h3>

<form action="/insert_comment" method="post">
  <input type="hidden" value="<%=@the_photo.id %>" name="query_photo_id">
  
  <label for="browser_comment">Comment</label>
  <textarea id="browser_comment" name="query_body" placeholder="Enter a comment..."></textarea>

  <button>Add comment</button>
</form>
